#!/bin/bash

set -x
set -e

help() {
  echo "Usage:"
  echo "  zgvm use"
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi

  # ta-multiverse::prepare
  if [ -z "$GIT_REPO_PKG" ]; then
    log::info "GIT_REPO_PKG is required"
    exit 1
  fi

  if [ ! -f "$GIT_REPO_PKG" ]; then
    log::info "GIT_REPO_PKG($GIT_REPO_PKG) is not a file"
    exit 1
  fi

  mkdir -p $GIT_REPO_DIR
  mkdir -p $BUILD_DIR

  # clean
  rm -rf $EXPORT_DIR

  docker run -d --name $RUNNER_NAME $RUNNER_IMAGE
  docker cp $RUNNER_NAME:/var/www/html $EXPORT_DIR
  docker rm -f $RUNNER_NAME
}

run() {
  core $@
}

run $@
