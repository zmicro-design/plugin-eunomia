#!/bin/bash

set -e

help() {
  echo "Usage:"
  echo "  zmicro eunomia build"
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi

  eunomia::prepare
  if [ "$?" != "0" ]; then
    log::error "[build] failed to prepare"
    exit 1
  fi

  eunomia::build
  if [ "$?" != "0" ]; then
    log::error "[build] failed to build"
    exit 1
  fi
}

run() {
  core $@
}

run $@
