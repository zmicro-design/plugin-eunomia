#!/bin/bash

set -e

help() {
  echo "Usage:"
  echo "  zgvm use"
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi

  if [ -z "$GIT_REPO_PKG" ]; then
    log::info "GIT_REPO_PKG is required"
    exit 1
  fi

  if  [ ! -f "$GIT_REPO_PKG" ]; then
    log::info "GIT_REPO_PKG($GIT_REPO_PKG) is not a file"
    exit 1
  fi

  mkdir -p $GIT_REPO_DIR
  mkdir -p $BUILD_DIR

  # APP
  tar -zxvf $GIT_REPO_PKG -C $GIT_REPO_DIR
  # Dockerfile
  cp ${SERVICE_CONFIGS}/docker/Dockerfile $GIT_REPO_DIR

  zmicro pipeline bp
}

run() {
  core $@
}

run $@
