#!/bin/bash

set -e

help() {
  echo "Usage:"
  echo "  zgvm use"
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi

  # ta-multiverse::prepare
  ta-multiverse::prepare

  if [ -d "$PLUGIN_TA_MULTIVERSE_BUILD_ID_DIR" ]; then
    rm -rf $PLUGIN_TA_MULTIVERSE_BUILD_ID_DIR
  fi

  # APP
  tar -zxvf $PLUGIN_TA_MULTIVERSE_GIT_REPO_PKG -C $PLUGIN_TA_MULTIVERSE_GIT_REPO_DIR
  # Dockerfile
  cp ${PLUGIN_DIR}/config/docker/Dockerfile $PLUGIN_TA_MULTIVERSE_GIT_REPO_DIR

  zmicro pipeline bp
}

run() {
  core $@
}

run $@
