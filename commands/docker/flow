#!/bin/bash

# fix tee modify the exit code: https://stackoverflow.com/questions/6871859/piping-command-output-to-tee-but-also-save-exit-code-of-command
set -o pipefail

help() {
  echo "Usage:"
  echo "  zmicro eunomia docker flow"
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi

  eunomia::show_version_info

  if [ -n "$EUNOMIA_GIT_REPOSITORY" ] && [ -n "$EUNOMIA_GIT_BRANCH" ]; then
    export EUNOMIA_GIT_CHECKOUT_DIR=$(os::tmp_dir)
    export PLUGIN_EUNOMIA_DOWNLOAD_PKG="${PLUGIN_EUNOMIA_TMP_DIR}/$(os::random_string 8).tar.gz"

    log::info "[$(timestamp)][docker][flow] checkouting with $EUNOMIA_GIT_REPOSITORY at $EUNOMIA_GIT_BRANCH ..."
    eunomia::checkout
    if [ "$?" != "0" ]; then
      log::error "[$(timestamp)][docker][flow] failed to checkout git repo."
      return 1
    fi

    log::success "[$(timestamp)][docker][flow] succeed to checkout git repo."
    
    log::info "[$(timestamp)][docker][flow] creating DOWNLOAD_PKG at $PLUGIN_EUNOMIA_DOWNLOAD_PKG ..."
    cd $EUNOMIA_GIT_CHECKOUT_DIR
    tar -zcvf $PLUGIN_EUNOMIA_DOWNLOAD_PKG * >>/dev/null
    if [ "$?" != "0" ]; then
      log::error "[$(timestamp)][docker][flow] failed to create DOWNLOAD_PKG."
      return 1
    fi
    cd -
  fi

  echo "PLUGIN_EUNOMIA_BUILD_ID_DIR: $PLUGIN_EUNOMIA_BUILD_ID_DIR"
  echo "PLUGIN_EUNOMIA_DOWNLOAD_PKG: $PLUGIN_EUNOMIA_DOWNLOAD_PKG"

  eunomia::docker_flow
}

run() {
  if [ -z "$PLUGIN_EUNOMIA_BUILD_ID" ]; then
    log::error "[$(timestamp)][docker][flow] PLUGIN_EUNOMIA_BUILD_ID is required"
    exit 1
  fi

  # must mkdir or tee log file not found in docker flow
  if [ ! -d "$PLUGIN_EUNOMIA_BUILD_ID_DIR" ]; then
    mkdir -p $PLUGIN_EUNOMIA_BUILD_ID_DIR
  fi

  core $@ | tee -a $PLUGIN_EUNOMIA_BUILD_ID_LOG
}

run $@
