#!/bin/bash

eunomia::export() {
  if [ -z "$PLUGIN_EUNOMIA_EXPORT_ID_DIR" ]; then
    log::error "[eunomia::export] PLUGIN_EUNOMIA_EXPORT_ID_DIR is required"
    return 1
  fi

  if [ -d "$PLUGIN_EUNOMIA_EXPORT_ID_DIR" ]; then
    log::error "[eunomia::export] export directory($PLUGIN_EUNOMIA_EXPORT_ID_DIR) already exists"
    return 1
  fi

  if [ ! -d "$PLUGIN_EUNOMIA_BUILD_ID_DIR" ]; then
    log::error "[eunomia::export] you must run prepare first"
    return 1
  fi

  # if [ -z "$(ls $PLUGIN_EUNOMIA_BUILD_ID_DIR)" ]; then
  #   log::error "[eunomia::export] no build found, you must run build first"
  #   return 1
  # fi

  # # @TODO if no user found, do something
  # if [ -z "$PLUGIN_EUNOMIA_EXECUTOR_EMAIL" ]; then
  #   # wait 1000ms
  #   # log::info "[eunomia::export] no user found, wait 1000ms"
  #   log::info "[eunomia::export] working ..."
  #   os::wait 1000
  # fi

  # # @TODO if no environment found, do something
  # if [ -z "$EUNOMIA_VERSION" ]; then
  #   # wait 300ms
  #   log::info "[eunomia::export] no eunomia version found, wait 300ms"
  #   os::wait 300
  # fi

  # ensure container removed
  docker rm -f $PLUGIN_EUNOMIA_RUNNER_NAME >> /dev/null 2>&1

  docker run -d --name $PLUGIN_EUNOMIA_RUNNER_NAME $PLUGIN_EUNOMIA_RUNNER_IMAGE >> /dev/null
  if [ "$?" != "0" ]; then
    log::error "[eunomia::export] failed to start runner container"
    return 1
  fi
  
  log::info "[eunomia::export] copy from docker:$PLUGIN_EUNOMIA_RUNNER_DIST_DIR to host:$PLUGIN_EUNOMIA_EXPORT_ID_DIR"
  docker cp $PLUGIN_EUNOMIA_RUNNER_NAME:${PLUGIN_EUNOMIA_RUNNER_DIST_DIR} $PLUGIN_EUNOMIA_EXPORT_ID_DIR >> /dev/null
  if [ "$?" != "0" ]; then
    log::error "[eunomia::export] failed to export when copying from runner"
    return 1
  fi

  log::info "[eunomia::export] exporting to $PLUGIN_EUNOMIA_EXPORT_ID_PKG"
  cd $PLUGIN_EUNOMIA_EXPORT_ID_DIR
  tar -zcvf $PLUGIN_EUNOMIA_EXPORT_ID_PKG . >> /dev/null
  if [ "$?" != "0" ]; then
    log::error "[eunomia::export] failed to export when compressing"
    return 1
  fi

  docker rm -f $PLUGIN_EUNOMIA_RUNNER_NAME >> /dev/null 2>&1

  if [ -n "$PLUGIN_EUNOMIA_EXPORT_DIST" ]; then
    log::info "[eunomia::export] alias to $PLUGIN_EUNOMIA_EXPORT_DIST"
    cp $PLUGIN_EUNOMIA_EXPORT_ID_PKG $PLUGIN_EUNOMIA_EXPORT_DIST
  fi

  log::info "[eunomia::export] done"
}

export -f eunomia::export
